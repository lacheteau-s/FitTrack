<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FitTrack.RootPage" Padding="20, 20, 20, 20" BackgroundColor="Silver">
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="15" >		
			<Label Text="FitTrack" TextColor="White" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="20" />
			<Button x:Name="Routine1" Text="Routine #1" TextColor="White" BackgroundColor="Teal" Clicked="OnRoutineClicked" />
			<Button x:Name="Routine2" Text="Routine #2" TextColor="White" BackgroundColor="Teal" Clicked="OnRoutineClicked" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
